
<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :merchant_id %>
    <%= f.input :trans_id %>
    <%= f.input :customer_number %>
    <%= f.input :customer_netowrk %>
    <%= f.input :trans_type %>
    <%= f.input :amount %>
    <%= f.input :reference %>
    <%= f.input :pay_status %>
    <%= f.input :award_id %>
    <%= f.input :category_id %>
    <%= f.input :nominee_id %>
    <%= f.input :techo_msg %>
    <%= f.input :payment_types %>
    <%= f.input :card_name %>
    <%= f.input :card_email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
