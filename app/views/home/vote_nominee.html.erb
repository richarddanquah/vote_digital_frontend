<section class="inner-banner">
 <div id="banner-bg-effect" class="banner-effect"></div>
    </section>

    <% @vote_categs = Category.where(id: params[:id],status: true)[0] %>
    <% @vote_noms = Nominee.where(category_id: params[:id],status: true)%>

  <!-- stats section -->
<section id="stats" class="stats">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 margin-md-60">
                <h2 class="left-title"><%=@vote_categs.name %></h2>
                <p class="white">Home / Nominee</p>
            </div>

        </div>
    </div>
</section>
<!-- //stats section -->




<!-- homepage blog grids -->
<section id="blog">
    <div class="container">


        <div class="blog-grids row mt-5">

           <% @vote_noms.each_with_index do |nom,index| %>
              <div class="col-lg-6 col-md-6 col-sm-12 blog-grid" id="zoomIn">
                  <h4><%= nom.name %></h4>
                  <a>
        <figure>
                <% if nom.avatar2.presence %>
                <%= image_tag('https://res.cloudinary.com/deavqmclh/'+nom.avatar2,class:"img-fluid", alt:"",style:"height: 300px; width: 350px;") %>
                <% else %>
                <%= image_tag('https://res.cloudinary.com/deavqmclh/',class:"img-fluid", alt:"",style:"height: 300px; width: 350px;") %>
                <% end %>
          </figure>
                </a>

              
                    <div class="row">
                      <div class="col text-center">
                            <%= link_to 'Vote Now', vote_pay_path(:id=> nom.id), class:"btn btn-primary btn-style",style:"float:left; margin:15px 75px;" %>
                      
                      </div>
                    </div>
                

                 <br>
                 <br> 

                 

         </div>

            <% end %>



        </div>
    </div>
</section>
<!-- //homepage blog grids -->
